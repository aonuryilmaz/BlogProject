
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<Project_Entity.Message>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Mesajlar
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>EMail</th>
                                <th>Telefon</th>
                                <th>Okunma Durumu</th>
                                <th>İşlemler</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="sil_@item.ID" class="odd gradeX">
                                    
                                    <td>@item.ContactName</td>
                                    <td>@item.ContactEMail</td>
                                    <td>@item.Phone</td>
                                    @if (item.IsActive)
                                    {
                                        <td id="durum_@item.ID" onclick="Status(@item.ID,'/Admin/Contact/Status/')"><span class='btn btn-success'>Aktif</span></td>
                                    }
                                    else
                                    {
                                        <td id="durum_@item.ID" onclick="Status(@item.ID,'/Admin/Contact/Status/')"><span class='btn btn-danger'>Pasif</span></td>
                                    }
                                    <td>
                                        <a href="/Admin/Contact/Reply/@item.ID" class="glyphicon glyphicon-edit"></a>
                                      
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

