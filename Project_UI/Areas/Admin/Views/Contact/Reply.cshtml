
@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Project_Entity.Message

<div class="row">
    <div class="col-lg-12">
        <h5 class="page-header"><a href="/Admin/Contact/Index" class="btn btn-primary">Geri Dön</a></h5>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               <h5>Mail Detay</h5>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form method="post" enctype="multipart/form-data">
                            @if (Model != null)
                            {
                                @Html.HiddenFor(x => x.ID)
                            }


                            <div class="form-group">
                                @Html.LabelFor(x => x.ContactName)
                                @Html.TextBoxFor(x => x.ContactName, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ContactEMail)
                                @Html.TextBoxFor(x => x.ContactEMail, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Phone)
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div  class="form-group">
                                @Html.LabelFor(x => x.ContactContent)
                                @Html.TextAreaFor(x => x.ContactContent, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.ReplyTitle)
                                @Html.TextBoxFor(x => x.ReplyTitle, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ReplyContent)
                                @Html.TextAreaFor(x => x.ReplyContent, new { @class = "form-control" })
                            </div>

                         
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Kaydet" />
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

