
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@model Project_Entity.Message
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Contact
                <strong>form</strong>
            </h2>
            <hr>
    
       @using (Html.BeginForm())
       { 
                <div class="row">
                    <div class="form-group col-lg-4">
                      @Html.Label("Ad Soyad")
                        @Html.TextBoxFor(x=>x.ContactName ,new { @class="form-control" })
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.Label("Telefon")
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.Label("Mail Adres")
                        @Html.TextBoxFor(x => x.ContactEMail, new { @class = "form-control" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        @Html.Label("Mesaj")
                        @Html.TextAreaFor(x => x.ContactContent, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-12">
                     
                        <button type="submit" class="btn btn-default">Send Message</button>
                    </div>
                </div>
           }
        </div>
    </div>
</div>