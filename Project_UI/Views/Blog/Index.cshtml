
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@model List<Project_Entity.Article>
<div class="row">
    <div class="box">
        @foreach (var item in Model)
        {
            <div class="col-lg-12 text-center">
                <img class="img-responsive img-border img-full" src="@item.ImagePath" alt="">
                <h2>
                    @item.Title

                    <br>
                    @if (item.Author != null)
                    {
                        <small>@item.Author.FullName</small>
                    }
                    <small>@item.CreatedDate</small>

                </h2>
            


                    @if (item.Content.Length > 150)
                    {
                        <p>
                            @Html.Raw(item.Content.Substring(0, item.Content.Length > 150 ? 200 : item.Content.Length))
                            ...
                        </p>

                    }
                    else
                    {
                        <p>
                            @Html.Raw(item.Content)

                        </p>
                    }

             
                <p></p>
                <a href="/Blog/Detail/@item.ID" class="btn btn-default btn-lg">Read More</a>
                <hr>
            </div>
        }


    </div>
</div>
