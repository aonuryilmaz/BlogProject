
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@model  Project_Entity.Article
<div class="row">
    <div class="box">
       
            <div class="col-lg-12 text-center">
                <img class="img-responsive img-border img-full" src="@Model.ImagePath" alt="">
                <h2>
                    @Model.Title
                    <br>
                    <small>@Model.CreatedDate</small>
                </h2>
 <p>
                        @Html.Raw(Model.Content)

                    </p>
               


                <p></p>
                <a href="/Blog/Index" class="btn btn-default btn-lg">Previous</a>
                <hr>
            </div>
    

    </div>
</div>





