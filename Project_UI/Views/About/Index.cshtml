
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@model  Project_Entity.VM.AboutVM

@foreach (var item in Model.About)
{
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">

                    <strong>@item.Title</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-6">
                <img class="img-responsive img-border-left" src="@item.ImagePath" alt="">
            </div>
            <div class="col-md-6">
                <p>@item.Content</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}


<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Our
                <strong>Team</strong>
            </h2>
            <hr>
        </div>
        @foreach (var item in Model.Authors)
        {
            <div class="col-sm-4 text-center">
                <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                <h3>
                    @item.FullName
                    <small>@item.EMail</small>
                </h3>
            </div>
        }
      
      
        <div class="clearfix"></div>
    </div>
</div>
